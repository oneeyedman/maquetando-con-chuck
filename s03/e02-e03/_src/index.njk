<section class="blog">
	<h2 class="blog__title">Mis posts</h2>

	<ul class="blog__list">		
		{% for post in collections.blog %}
		<li class="blog__list-item">
			<a href="{{ post.url }}">
				{{ post.data.date }}<br>
				{{ post.data.title }} {{ post.data.paquito }}</a>
		</li>
		{% endfor %}
	</ul>
</section>

